<% view :single_tab do %>

<div class="single">
  <%= button_view :startStop, :action => 'PuyoPuyo.gameController.startStop', :default => true, :title => 'Start & stop', :bind => {:title => 'PuyoPuyo.gameController.startStopLabel' } %>
  <table class="scores">
    <tr>
      <td>Puyos</td><td><%= label_view :disappeared_pieces, :value => "0", :bind => {:value => 'PuyoPuyo.gameController.board.disappearedPieces' } %></td>
    </tr>
    <tr>
      <td>Score</td><td><%= label_view :score, :value => "0", :bind => {:value => 'PuyoPuyo.gameController.board.score' } %></td>
    </tr>
    <tr>
      <td>Level</td><td><%= label_view :level, :value => "0", :bind => {:value => 'PuyoPuyo.gameController.board.level' } %></td>
    </tr>
  </table>
  <%= view :boardView,
      :tag => :table,
      :class => 'board',
      :view => 'PuyoPuyo.BoardView',
      :bind => { :board => 'PuyoPuyo.gameController.board',
                 :boardTime => 'PuyoPuyo.gameController.board.time',
                 :playing => 'PuyoPuyo.gameController.board.playing' } %>
</div>
<% end %>
